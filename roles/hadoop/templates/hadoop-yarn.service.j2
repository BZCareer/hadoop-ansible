[Unit]
Description=Hadoop Yarn Resource Manager Service
After=network.target

[Service]
Type=forking
User=hadoop
Environment=HADOOP_PREFIX={{ hadoop_install_dir }} JAVA_HOME=/usr/lib/jvm/java-1.8.0
ExecStart={{ hadoop_install_dir }}/sbin/start-yarn.sh
ExecStart={{ hadoop_install_dir }}/sbin/stop-yarn.sh
Restart=on-abort

[Install]
WantedBy=multi-user.target
